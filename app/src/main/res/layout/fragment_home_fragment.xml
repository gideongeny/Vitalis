<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vitalis_gradient_bg"
    tools:context="UI.Home_fragment.Home_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">

            <!-- Offline Banner -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF3D00"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/nointernet"
                    android:layout_marginStart="24dp"
                    app:tint="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Offline Mode: Some features may be limited"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/imageView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Date Banner -->
            <TextView
                android:id="@+id/ban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TODAY"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.2"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:background="@drawable/glass_rounded_12"
                app:layout_constraintTop_toBottomOf="@+id/net"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Greeting Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/greet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                app:layout_constraintTop_toBottomOf="@+id/ban">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, "
                    android:textColor="@color/on_background"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textColor="@color/primary"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toTopOf="@+id/textView2" />

                <TextView
                    android:id="@+id/greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let's crush your goals!"
                    android:textColor="#CC1A1B2E"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_card"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardBackgroundColor="@color/secondary"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <TextView
                        android:id="@+id/p_initial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="U"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/p_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/weather"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/sun"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@id/profile_card"
                    app:layout_constraintTop_toTopOf="@id/profile_card"
                    app:layout_constraintBottom_toBottomOf="@id/profile_card" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Trackers Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/greet">

                <!-- Row 1: Water & Steps -->
                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    android:weightSum="2"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Water Tracker -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/c1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/glass_white"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/glass_icon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/glass"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <TextView
                                android:id="@+id/water_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/on_background"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@id/glass_icon"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/water_label"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <TextView
                                android:id="@+id/water_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Glasses"
                                android:textColor="#AA1A1B2E"
                                android:textSize="14sp"
                                app:layout_constraintTop_toBottomOf="@id/water_level"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/water_actions" />

                            <LinearLayout
                                android:id="@+id/water_actions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                app:layout_constraintBottom_toBottomOf="parent">

                                <ImageButton
                                    android:id="@+id/deletewater"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:background="@drawable/glass_rounded_12"
                                    android:src="@drawable/baseline_remove_circle_outline_24"
                                    app:tint="@color/primary"
                                    android:layout_marginEnd="8dp" />

                                <ImageButton
                                    android:id="@+id/addwater"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:background="@drawable/glass_rounded_12"
                                    android:src="@drawable/baseline_add_circle_outline_24"
                                    app:tint="@color/primary"
                                    android:layout_marginStart="8dp" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Steps Tracker -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/stepcounter"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/glass_white"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp">

                            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                                android:id="@+id/circularProgressBar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cpb_background_progressbar_color="#1A1A1B2E"
                                app:cpb_background_progressbar_width="8dp"
                                app:cpb_progressbar_color="@color/secondary"
                                app:cpb_progressbar_width="8dp"
                                app:cpb_round_border="true" />

                            <TextView
                                android:id="@+id/walk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/on_background"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/step_sep"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <View
                                android:id="@+id/step_sep"
                                android:layout_width="40dp"
                                android:layout_height="1dp"
                                android:background="#33FFFFFF"
                                android:layout_marginVertical="4dp"
                                app:layout_constraintBottom_toTopOf="@id/goal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/walk" />

                            <TextView
                                android:id="@+id/goal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6000"
                                android:textColor="#AA1A1B2E"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/step_sep" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/img"
                                app:tint="@color/secondary"
                                android:layout_marginTop="4dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Calorie Tracker -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/calorie_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardBackgroundColor="@color/glass_white"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout3">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/cal_meter"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cpb_background_progressbar_color="#1A1A1B2E"
                            app:cpb_background_progressbar_width="8dp"
                            app:cpb_progressbar_color="@color/primary"
                            app:cpb_progressbar_width="8dp"
                            app:cpb_round_border="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/cal_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/cal"
                            app:tint="@color/primary"
                            app:layout_constraintTop_toTopOf="@id/cal_meter"
                            app:layout_constraintBottom_toBottomOf="@id/cal_meter"
                            app:layout_constraintStart_toStartOf="@id/cal_meter"
                            app:layout_constraintEnd_toEndOf="@id/cal_meter" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="20dp"
                            app:layout_constraintStart_toEndOf="@id/cal_meter"
                            app:layout_constraintEnd_toStartOf="@id/add_food"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="bottom">
                                <TextView
                                    android:id="@+id/calorie"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textColor="@color/on_background"
                                    android:textSize="24sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" / "
                                    android:textColor="#881A1B2E"
                                    android:textSize="16sp" />
                                <TextView
                                    android:id="@+id/target_cal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2200"
                                    android:textColor="#AA1A1B2E"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calories Eaten"
                                android:textColor="#AA1A1B2E"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/add_food"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/glass_rounded_12"
                            android:src="@drawable/baseline_add_24"
                            app:tint="@color/primary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Weight Tracker -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/weightc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardBackgroundColor="@color/glass_white"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/calorie_t">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/weight_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/weight_machine"
                            app:tint="@color/primary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/weight_icon"
                            app:layout_constraintEnd_toStartOf="@id/weightButton"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="bottom">
                                <TextView
                                    android:id="@+id/weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textColor="@color/on_background"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" Kg"
                                    android:textColor="#AA1A1B2E"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current Weight"
                                android:textColor="#AA1A1B2E"
                                android:textSize="12sp"
                                android:textAllCaps="true"
                                android:letterSpacing="0.1" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/weightButton"
                            style="@style/Widget.Material3.Button.IconButton.Filled"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:icon="@drawable/baseline_arrow_forward_ios_24"
                            app:iconTint="@color/primary"
                            app:backgroundTint="@color/glass_white"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Burn & Sleep Row -->
                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="12dp"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@+id/weightc">

                    <!-- Burn Tracker -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/c2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/glass_white"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp">

                            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                                android:id="@+id/burn_cal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cpb_background_progressbar_color="#1A1A1B2E"
                                app:cpb_background_progressbar_width="8dp"
                                app:cpb_progressbar_color="@color/secondary"
                                app:cpb_progressbar_width="8dp"
                                app:cpb_round_border="true" />

                            <TextView
                                android:id="@+id/burn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/on_background"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/burn_label"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <TextView
                                android:id="@+id/burn_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="kcal"
                                android:textColor="#AA1A1B2E"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/burn" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/burn"
                                app:tint="@color/secondary"
                                android:layout_marginTop="4dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Sleep Tracker -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/sleep"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/glass_white"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp">

                            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                                android:id="@+id/sleepbar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cpb_background_progressbar_color="#1A1A1B2E"
                                app:cpb_background_progressbar_width="8dp"
                                app:cpb_progressbar_color="#FFBF00"
                                app:cpb_progressbar_width="8dp"
                                app:cpb_round_border="true" />

                            <TextView
                                android:id="@+id/hrs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/on_background"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/sleep_label"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <TextView
                                android:id="@+id/sleep_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="hrs"
                                android:textColor="#AA1A1B2E"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/hrs" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/img_1"
                                app:tint="#FFBF00"
                                android:layout_marginTop="4dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Meal Reminders -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/meal_rem_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/glass_white"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout4">

                    <TextView
                        android:id="@+id/mealrem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Meal Reminders"
                        android:textColor="@color/on_background"
                        android:padding="16dp"
